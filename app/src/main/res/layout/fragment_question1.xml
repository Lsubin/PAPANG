<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Question1">

    <ImageView
        android:id="@+id/q1_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/question_1"
        android:background="#00fff000"
        android:layout_marginTop="38dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/q1_frame2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/question_1_bar"
        android:layout_marginTop="28dp"
        android:background="#00fff000"
        app:layout_constraintTop_toBottomOf="@id/q1_frame"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/q1_frame3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/question_1_text"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="16dp"
        android:background="#00fff000"
        app:layout_constraintTop_toBottomOf="@id/q1_frame2"
        app:layout_constraintLeft_toLeftOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/q1_frame3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/circle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/circle2"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/ode_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00fff000"
                android:src="@mipmap/circle_c" />

            <ImageView
                android:id="@+id/ode_c_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00fff000"
                android:src="@mipmap/ode_c_text"
                android:layout_marginTop="24dp"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/circle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/circle1"
            app:layout_constraintRight_toLeftOf="@id/circle3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/ode_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/circle_c"
                android:background="#00fff000"/>

            <ImageView
                android:id="@+id/ode_d_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00fff000"
                android:src="@mipmap/ode_d_text"
                android:layout_marginTop="24dp"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/circle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/circle2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/ode_p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/circle_c"
                android:background="#00fff000"/>

            <ImageView
                android:id="@+id/ode_p_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00fff000"
                android:src="@mipmap/ode_p_text"
                android:layout_marginTop="24dp"
                android:layout_gravity="center"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>