<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".review.ReviewWriteActivity">

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/rw_frame1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                <ImageButton
                        android:id="@+id/btn_rw_exit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="24dp"
                        android:src="@mipmap/exit_btn"
                        android:background="#00fff000"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                <TextView
                        android:id="@+id/rw_product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="24dp"
                        android:fontFamily="@font/kopubworlddotumbold"
                        android:textSize="16sp"
                        android:textColor="#6557FF"
                        android:text="넘버 5 오뜨빠르펭"
                        app:layout_constraintTop_toBottomOf="@id/btn_rw_exit"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:fontFamily="@font/kopubworlddotumbold"
                        android:textSize="16sp"
                        android:textColor="#4B4B4B"
                        android:text="리뷰 작성"
                        app:layout_constraintTop_toBottomOf="@id/rw_product_name"
                        app:layout_constraintLeft_toLeftOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                    android:id="@+id/rw_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#D0D0D0"
                    android:layout_marginTop="28dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    app:layout_constraintTop_toBottomOf="@id/rw_frame1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/rw_frame2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    app:layout_constraintTop_toBottomOf="@id/rw_line"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                <TextView
                        android:id="@+id/rw_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:fontFamily="@font/kopubworlddotumedium"
                        android:text="리뷰 유형"
                        android:textSize="14sp"
                        android:textColor="#4B4B4B"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/rw_frame3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/rw_text1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent">

                    <ImageButton
                            android:id="@+id/btn_review_type1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:background="#00fff000"
                            android:src="@mipmap/review_type1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"/>

                    <ImageButton
                            android:id="@+id/btn_review_type2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:background="#00fff000"
                            android:src="@mipmap/review_type2"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/btn_review_type1"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/rw_frame4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        app:layout_constraintTop_toBottomOf="@id/rw_frame3"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent">

                    <TextView
                            android:id="@+id/rw_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:fontFamily="@font/kopubworlddotumedium"
                            android:text="향수는 어떠셨나요?"
                            android:textSize="14sp"
                            android:textColor="#4B4B4B"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                            android:id="@+id/rw_rating_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="12dp"
                            android:fontFamily="@font/kopubworlddotumedium"
                            android:textSize="12sp"
                            android:textColor="#000"
                            app:layout_constraintRight_toLeftOf="@id/rw_ratingbar"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    <androidx.appcompat.widget.AppCompatRatingBar
                            android:id="@+id/rw_ratingbar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:rating="0"
                            android:stepSize="1"
                            style="@style/ReviewRatingBar"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                        android:id="@+id/rw_text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:layout_marginLeft="24dp"
                        android:fontFamily="@font/kopubworlddotumedium"
                        android:text="계절 선택"
                        android:textSize="14sp"
                        android:textColor="#4B4B4B"
                        app:layout_constraintTop_toBottomOf="@id/rw_frame4"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                <TextView
                        android:id="@+id/rw_text4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:fontFamily="@font/kopubworlddotumedium"
                        android:text=" (선택)"
                        android:textSize="14sp"
                        android:textColor="#A4A4A4"
                        app:layout_constraintTop_toBottomOf="@id/rw_frame4"
                        app:layout_constraintLeft_toRightOf="@id/rw_text3"/>

                <TextView
                        android:id="@+id/rw_text5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="37dp"
                        android:layout_marginLeft="8dp"
                        android:fontFamily="@font/kopubworlddotumedium"
                        android:text="향에서 느껴지는 계절을 선택 해 주세요."
                        android:textSize="12sp"
                        android:textColor="#4B4B4B"
                        app:layout_constraintTop_toBottomOf="@id/rw_frame4"
                        app:layout_constraintLeft_toRightOf="@id/rw_text4"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/rw_frame5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        app:layout_constraintTop_toBottomOf="@id/rw_text3"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent">

                        <ImageButton
                                android:id="@+id/btn_review_spring"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="9dp"
                                android:background="#00fff000"
                                android:src="@mipmap/review_spring"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"/>

                        <ImageButton
                                android:id="@+id/btn_review_summer"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="9dp"
                                android:background="#00fff000"
                                android:src="@mipmap/review_summer"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toRightOf="@id/btn_review_spring"/>

                        <ImageButton
                                android:id="@+id/btn_review_fall"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="9dp"
                                android:background="#00fff000"
                                android:src="@mipmap/review_fall"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toRightOf="@id/btn_review_summer"/>

                        <ImageButton
                                android:id="@+id/btn_review_winter"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:background="#00fff000"
                                android:src="@mipmap/review_winter"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toRightOf="@id/btn_review_fall"/>

                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/rw_frame6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        app:layout_constraintTop_toBottomOf="@id/rw_frame5"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent">

                    <TextView
                            android:id="@+id/rw_text6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/kopubworlddotumedium"
                            android:text="텍스트 리뷰 작성"
                            android:textSize="14sp"
                            android:textColor="#4B4B4B"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"/>

                    <TextView
                            android:id="@+id/rw_text7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="8dp"
                            android:fontFamily="@font/kopubworlddotumedium"
                            android:text="태그 자동화"
                            android:textSize="12sp"
                            android:textColor="#4B4B4B"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/rw_tag_checkbox"/>

                    <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/rw_tag_checkbox"
                            android:layout_width="13dp"
                            android:layout_height="21dp"
                            android:button="@drawable/custom_checkbox"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>

                    <EditText
                            android:id="@+id/rw_text_review"
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:layout_marginTop="12dp"
                            android:hint="향을 맡고 느낀 점을 함께 이야기 해 보아요!"
                            android:fontFamily="@font/kopubworlddotumlight"
                            android:textSize="14sp"
                            android:textColorHint="#767676"
                            android:textColor="#000"
                            android:background="#00fff000"
                            android:gravity="start"
                            app:layout_constraintTop_toBottomOf="@id/rw_text6"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>

                    <TextView
                            android:id="@+id/rw_text8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/kopubworlddotumlight"
                            android:text="(최소 15자 이상 작성 해 주세요.)"
                            android:textSize="12sp"
                            android:textColor="#767676"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/rw_text_review"
                            app:layout_constraintLeft_toLeftOf="parent"/>

                    <TextView
                            android:id="@+id/rw_text_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/kopubworlddotumlight"
                            android:text="0"
                            android:textSize="14sp"
                            android:textColor="#767676"
                            app:layout_constraintTop_toBottomOf="@id/rw_text_review"
                            app:layout_constraintRight_toRightOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                        android:id="@+id/rw_line2"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#D0D0D0"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        app:layout_constraintTop_toBottomOf="@id/rw_frame6"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>

                <TextView
                        android:id="@+id/rw_text9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:layout_marginLeft="24dp"
                        android:fontFamily="@font/kopubworlddotumedium"
                        android:text="#해시태그"
                        android:textSize="14sp"
                        android:textColor="#4B4B4B"
                        app:layout_constraintTop_toBottomOf="@id/rw_line2"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                <TextView
                        android:id="@+id/rw_text10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:fontFamily="@font/kopubworlddotumedium"
                        android:text=" (선택)"
                        android:textSize="14sp"
                        android:textColor="#A4A4A4"
                        app:layout_constraintTop_toBottomOf="@id/rw_line2"
                        app:layout_constraintLeft_toRightOf="@id/rw_text9"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/rw_frame7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        app:layout_constraintTop_toBottomOf="@id/rw_text9"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent">

                    <EditText
                            android:id="@+id/rw_tag_input"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:background="#F8F8F8"
                            android:drawableLeft="@mipmap/rw_search_icon"
                            android:drawablePadding="12dp"
                            android:fontFamily="@font/kopubworlddotumedium"
                            android:hint="원하는 해시태그를 검색하세요 (ex 달달한, 가벼운)"
                            android:paddingStart="12dp"
                            android:singleLine="true"
                            android:textColorHint="#A4A4A4"
                            android:textSize="14sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rw_hash_tag"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:scrollbars="horizontal"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/rw_tag_input"
                            app:layout_constraintVertical_bias="1.0"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                        android:id="@+id/rw_text11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="24dp"
                        android:fontFamily="@font/kopubworlddotumedium"
                        android:text="사진등록"
                        android:textSize="14sp"
                        android:textColor="#4B4B4B"
                        app:layout_constraintTop_toBottomOf="@id/rw_frame7"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                <TextView
                        android:id="@+id/rw_text12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:fontFamily="@font/kopubworlddotumedium"
                        android:text=" (선택)"
                        android:textSize="14sp"
                        android:textColor="#A4A4A4"
                        app:layout_constraintTop_toBottomOf="@id/rw_frame7"
                        app:layout_constraintLeft_toRightOf="@id/rw_text11"/>

                <TextView
                        android:id="@+id/rw_text15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="42dp"
                        android:layout_marginRight="24dp"
                        android:fontFamily="@font/kopubworlddotumedium"
                        android:text="(최대 3장)"
                        android:textSize="10sp"
                        android:textColor="#4B4B4B"
                        app:layout_constraintTop_toBottomOf="@id/rw_frame7"
                        app:layout_constraintRight_toRightOf="parent"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/rw_frame8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        app:layout_constraintTop_toBottomOf="@id/rw_text11"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent">

                    <ImageView
                            android:id="@+id/rw_image1"
                            android:layout_width="104dp"
                            android:layout_height="104dp"
                            android:background="@mipmap/ex_camera"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"/>

                    <ImageView
                            android:id="@+id/rw_image2"
                            android:layout_width="104dp"
                            android:layout_height="104dp"
                            android:background="@mipmap/ex_camera"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>

                    <ImageView
                            android:id="@+id/rw_image3"
                            android:layout_width="104dp"
                            android:layout_height="104dp"
                            android:background="@mipmap/ex_camera"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                        android:id="@+id/rw_text13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="24dp"
                        android:fontFamily="@font/kopubworlddotumedium"
                        android:text="향료선택"
                        android:textSize="14sp"
                        android:textColor="#4B4B4B"
                        app:layout_constraintTop_toBottomOf="@id/rw_frame8"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                <TextView
                        android:id="@+id/rw_text14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:fontFamily="@font/kopubworlddotumedium"
                        android:text=" (선택)"
                        android:textSize="14sp"
                        android:textColor="#A4A4A4"
                        app:layout_constraintTop_toBottomOf="@id/rw_frame8"
                        app:layout_constraintLeft_toRightOf="@id/rw_text13"/>

                <TextView
                        android:id="@+id/rw_text16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="42dp"
                        android:layout_marginLeft="8dp"
                        android:fontFamily="@font/kopubworlddotumedium"
                        android:text="가장 많이 느껴지는 향 최대 3가지를 선택해주세요. (1개 이상)"
                        android:textSize="10sp"
                        android:textColor="#A4A4A4"
                        app:layout_constraintTop_toBottomOf="@id/rw_frame8"
                        app:layout_constraintLeft_toRightOf="@id/rw_text14"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/rw_frame9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        app:layout_constraintTop_toBottomOf="@id/rw_text13"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent">

                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rw_flavor_grid"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:overScrollMode="never"
                            android:scrollbars="none"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageButton
                        android:id="@+id/btn_rw_ok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="30dp"
                        android:src="@mipmap/btn_rw_off"
                        android:background="#00fff000"
                        app:layout_constraintTop_toBottomOf="@id/rw_frame9"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>