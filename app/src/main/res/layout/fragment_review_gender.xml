<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.perfume.review.ReviewGenderFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/g_frame1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/g_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="여성"
            android:fontFamily="@font/kopubworlddotumedium"
            android:textSize="10sp"
            android:textColor="#4B4B4B"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/woman_gage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="100%"
            android:fontFamily="@font/kopubworlddotumedium"
            android:textSize="10sp"
            android:textColor="#4B4B4B"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/woman_progressbar"/>

        <ProgressBar
            android:id="@+id/woman_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="204dp"
            android:layout_height="6dp"
            android:layout_centerInParent="true"
            android:indeterminate="false"
            android:max="100"
            android:progress="100"
            android:progressDrawable="@drawable/gradient_progressbar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/g_frame2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/g_frame1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/g_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="남자"
            android:fontFamily="@font/kopubworlddotumedium"
            android:textSize="10sp"
            android:textColor="#4B4B4B"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/man_gage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="100%"
            android:fontFamily="@font/kopubworlddotumedium"
            android:textSize="10sp"
            android:textColor="#4B4B4B"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/man_progressbar"/>

        <ProgressBar
            android:id="@+id/man_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="204dp"
            android:layout_height="6dp"
            android:layout_centerInParent="true"
            android:indeterminate="false"
            android:max="100"
            android:progress="100"
            android:progressDrawable="@drawable/gradient_progressbar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/g_frame3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/g_frame2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/g_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="선택안함"
            android:fontFamily="@font/kopubworlddotumedium"
            android:textSize="10sp"
            android:textColor="#4B4B4B"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/none_gage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="100%"
            android:fontFamily="@font/kopubworlddotumedium"
            android:textSize="10sp"
            android:textColor="#4B4B4B"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/none_progressbar"/>

        <ProgressBar
            android:id="@+id/none_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="204dp"
            android:layout_height="6dp"
            android:layout_centerInParent="true"
            android:indeterminate="false"
            android:max="100"
            android:progress="100"
            android:progressDrawable="@drawable/gradient_progressbar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>