<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    tools:context=".SettingDetail4Activity">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/back"
        android:background="#00ff0000"
        android:layout_marginTop="4.4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1:1 문의"
        android:textColor="#000"
        android:textSize="18sp"
        android:fontFamily="@font/kopubworlddotumbold"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn_back"/>

    <ImageView
        android:id="@+id/icon_kakao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_kakao"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/btn_back"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카카오톡 문의하기"
            android:textColor="#545454"
            android:textSize="19sp"
            android:fontFamily="@font/kopubworlddotumbold"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@id/icon_kakao"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />
    
        <TextView
            android:id="@+id/text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서비스를 이용 중 문의하고 싶은 점이 있다면 @PAPANG 플러스 친구를 통해 연락주세요!"
            android:textColor="#000000"
            android:textSize="10sp"
            android:fontFamily="@font/kopubworlddotumedium"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@id/text_1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/text_2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="문의 내용을 1:1 채팅을 통해 연락주시면"
            android:textColor="#000000"
            android:textSize="10sp"
            android:fontFamily="@font/kopubworlddotumedium"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/text_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/text_2_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상담원 확인 후 최대한 빨리 답변 드리겠습니다."
            android:textColor="#000000"
            android:textSize="10sp"
            android:fontFamily="@font/kopubworlddotumedium"
            app:layout_constraintTop_toBottomOf="@id/text_2_1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />
    
        <ImageButton
            android:id="@+id/btn_goto_plusfriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_goto_plusfriend"
            android:background="#00ff0000"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@id/text_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/text_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="플러스 친구 답변 가능 시간 : 평일 10:00 ~ 18:00"
            android:textColor="#767676"
            android:textSize="10sp"
            android:fontFamily="@font/kopubworlddotumedium"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/btn_goto_plusfriend"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18시 이후 보내주신 내용은 그 다음날 차례로 답변 도와드리겠습니다."
            android:textColor="#767676"
            android:textSize="10sp"
            android:fontFamily="@font/kopubworlddotumedium"
            app:layout_constraintTop_toBottomOf="@id/text_3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>