<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:gravity="bottom"
    app:umanoDragView="@id/product_up_pannel"
    app:umanoPanelHeight="155dp"
    app:umanoOverlay="true"
    app:umanoShadowHeight="0dp"
    tools:context=".ProductDetailsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="샤넬"
            android:textSize="12sp"
            android:fontFamily="@font/kopubworlddotumedium"
            android:textColor="#000000"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="넘버 5 오드빠르펭"
            android:textSize="16sp"
            android:fontFamily="@font/kopubworlddotumbold"
            android:textColor="#000000"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/company_name"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <ImageView
            android:id="@+id/wish_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/heart_icon"
            android:layout_marginTop="50dp"
            android:layout_marginRight="24dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"/>

        <ImageView
            android:id="@+id/share_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/share_icon"
            android:layout_marginTop="50dp"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toLeftOf="@id/wish_btn"
            app:layout_constraintTop_toBottomOf="@id/toolbar"/>

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/chanel_image"
            android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@id/product2_layout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/product2_layout"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:background="@mipmap/price_background_image"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/product_name"
            app:layout_constraintLeft_toLeftOf="parent">

            <TextView
                android:id="@+id/price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정가"
                android:textSize="12sp"
                android:fontFamily="@font/kopubworlddotumbold"
                android:textColor="#6557FF"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="6dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/capacity_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100ml / 227,000원"
                android:textSize="12sp"
                android:fontFamily="@font/kopubworlddotumbold"
                android:textColor="#000000"
                android:singleLine="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="6dp"
                app:layout_constraintLeft_toRightOf="@id/price_text"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/product_up_pannel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/up_panel"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>