<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/result_produc_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHANEL"
        android:textColor="#000"
        android:textSize="12sp"
        android:fontFamily="@font/kopubworlddotumedium"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="13dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/product_image"/>

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="넘버5 오드빠르펭"
        android:textColor="#000"
        android:textSize="12sp"
        android:fontFamily="@font/kopubworlddotumbold"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="13dp"
        app:layout_constraintTop_toBottomOf="@id/company_name"
        app:layout_constraintLeft_toRightOf="@id/product_image"/>

    <ImageView
        android:id="@+id/capacity_30ml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/capacity_35ml_img"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="13dp"
        app:layout_constraintLeft_toRightOf="@id/product_image"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/capacity_50ml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/capacity_50ml_img"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toRightOf="@id/capacity_30ml"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/capacity_100ml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/capacity_100ml_img"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toRightOf="@id/capacity_50ml"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
        android:id="@+id/unWish_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_unfull_heart"
        android:background="#00fff000"
        android:layout_marginTop="45dp"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
