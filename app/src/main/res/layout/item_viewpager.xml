<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
            android:id="@+id/viewpager_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@mipmap/magazine1_img"
            android:scaleType="fitXY"
            android:background="#00fff000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/viewpager_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#Summer Vibe"
        android:fontFamily="@font/montserratbold"
        android:textColor="#000"
        android:textSize="13sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/viewpager_image"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/viewpager_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일상 속 휴가를 느낄 수 있는 여름 향수"
        android:fontFamily="@font/kopubworlddotumedium"
        android:textColor="#000"
        android:textSize="13sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/viewpager_text1"
        app:layout_constraintLeft_toLeftOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>