<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
    android:padding="20dp"
                                                   tools:context=".main.my.NotLoginFragment">



    <TextView
            android:id="@+id/hi_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="안녕하세요!"
            android:textSize="20sp"
            android:fontFamily="@font/kopubworlddotumbold"
            android:textColor="#000"
            android:layout_marginTop="40dp"
            app:layout_constraintBottom_toTopOf="@id/hi_text"
            app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="파팡 로그인을 통해 더 다양한 서비스를 즐겨보세요!"
            android:textSize="13sp"
            android:fontFamily="@font/kopubworlddotumedium"
            android:textColor="#000"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="60dp"
            app:layout_constraintTop_toBottomOf="@id/hi_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/goto_login_btn"/>

    <ImageButton
        android:id="@+id/goto_login_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:src="@mipmap/goto_join_btn"
        android:background="#00ff0000"
        android:layout_marginBottom="20dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/goto_join_btn"/>

    <ImageButton
        android:id="@+id/goto_join_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:src="@mipmap/goto_login_btn"
        android:background="#00ff0000"
        android:layout_marginBottom="20dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/kakao_btn"/>


    <ImageButton
            android:id="@+id/kakao_btn"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@mipmap/kakao_login_large_narrow"
            android:background="#00ff0000"
            android:layout_marginBottom="75dp"
            android:layout_marginRight="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>