<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Question2">

    <ImageView
        android:id="@+id/q2_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/question_2"
        android:background="#00fff000"
        android:layout_marginTop="38dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/q2_frame2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/question_2_bar"
        android:layout_marginTop="28dp"
        android:background="#00fff000"
        app:layout_constraintTop_toBottomOf="@id/q2_frame"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/q2_frame3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/question_2_text"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="16dp"
        android:background="#00fff000"
        app:layout_constraintTop_toBottomOf="@id/q2_frame2"
        app:layout_constraintLeft_toLeftOf="parent" />

    <com.jaygoo.widget.VerticalRangeSeekBar
        android:id="@+id/size_seekbar"
        android:layout_width="wrap_content"
        android:layout_height="450dp"
        app:rsb_max="6"
        app:rsb_min="0"
        app:rsb_min_interval="1"
        app:rsb_mode="single"
        app:rsb_gravity="bottom"
        app:rsb_orientation="left"
        app:rsb_steps="6"
        app:rsb_step_width="90dp"
        app:rsb_step_height="10dp"
        app:rsb_step_color="#00fff000"
        app:rsb_step_auto_bonding="true"
        app:rsb_tick_mark_orientation="vertical"
        app:rsb_tick_mark_mode="other"
        app:rsb_tick_mark_text_margin="30dp"
        app:rsb_tick_mark_layout_gravity="bottom"
        app:rsb_tick_mark_text_color="#4B4B4B"
        app:rsb_tick_mark_text_array="@array/size_seekbar"
        app:rsb_progress_color="#6557FF"
        app:rsb_progress_default_color="#EFEFEF"
        app:rsb_progress_height="16dp"
        app:rsb_thumb_width="32dp"
        app:rsb_thumb_height="32dp"
        app:rsb_thumb_drawable="@mipmap/thumb_image"
        app:rsb_thumb_scale_ratio="1.2"
        android:layout_marginTop="193dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/q_bottle_size"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/q_bottle_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/size5"
        android:background="#00fff000"
        android:layout_marginTop="241dp"
        app:layout_constraintLeft_toRightOf="@id/size_seekbar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>