<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   tools:context=".Question2">

    <ImageView
            android:id="@+id/q2_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/question_2"
            android:background="#00fff000"
            android:layout_marginTop="38dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

    <ProgressBar
            android:id="@+id/q2_frame2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_centerInParent="true"
            android:indeterminate="false"
            android:max="7"
            android:progress="2"
            android:progressDrawable="@drawable/gradient_progressbar"
            app:layout_constraintTop_toBottomOf="@id/q2_frame"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
            android:id="@+id/q2_frame3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/question_2_text"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="16dp"
            android:background="#00fff000"
            app:layout_constraintTop_toBottomOf="@id/q2_frame2"
            app:layout_constraintLeft_toLeftOf="parent"/>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/size_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="240dp"
            android:layout_marginLeft="44dp">

        <ImageButton
                android:id="@+id/size_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_size"
                android:background="#00fff000"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/q2_text_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 100ml 이상"
                android:fontFamily="@font/kopubworlddotumedium"
                android:layout_marginTop="48dp"
                android:layout_marginLeft="12dp"
                app:layout_constraintLeft_toRightOf="@id/size_6"
                app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton
                android:id="@+id/size_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_size"
                android:background="#00fff000"
                android:layout_marginTop="4dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/size_6"/>

        <TextView
                android:id="@+id/q2_text_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 75ml"
                android:layout_marginTop="105dp"
                android:fontFamily="@font/kopubworlddotumedium"
                app:layout_constraintStart_toStartOf="@id/q2_text_6"
                app:layout_constraintLeft_toRightOf="@id/size_5"
                app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton
                android:id="@+id/size_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_size"
                android:background="#00fff000"
                android:layout_marginTop="4dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/size_5"/>

        <TextView
                android:id="@+id/q2_text_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 50ml"
                android:layout_marginTop="165dp"
                android:fontFamily="@font/kopubworlddotumedium"
                app:layout_constraintStart_toStartOf="@id/q2_text_6"
                app:layout_constraintLeft_toRightOf="@id/size_4"
                app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton
                android:id="@+id/size_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_size"
                android:background="#00fff000"
                android:layout_marginTop="4dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/size_4"/>

        <TextView
                android:id="@+id/q2_text_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 30ml"
                android:layout_marginTop="225dp"
                android:fontFamily="@font/kopubworlddotumedium"
                app:layout_constraintStart_toStartOf="@id/q2_text_6"
                app:layout_constraintLeft_toRightOf="@id/size_3"
                app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton
                android:id="@+id/size_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_size"
                android:background="#00fff000"
                android:layout_marginTop="4dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/size_3"/>

        <TextView
                android:id="@+id/q2_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 15ml"
                android:layout_marginTop="290dp"
                android:fontFamily="@font/kopubworlddotumedium"
                app:layout_constraintStart_toStartOf="@id/q2_text_6"
                app:layout_constraintLeft_toRightOf="@id/size_2"
                app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton
                android:id="@+id/size_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_size"
                android:background="#00fff000"
                android:layout_marginTop="4dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/size_2"/>

        <TextView
                android:id="@+id/q2_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 0ml"
                android:layout_marginTop="345dp"
                android:fontFamily="@font/kopubworlddotumedium"
                app:layout_constraintStart_toStartOf="@id/q2_text_2"
                app:layout_constraintLeft_toRightOf="@id/size_2"
                app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
            android:id="@+id/q_bottle_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bottle"
            android:background="#00fff000"
            android:layout_marginTop="241dp"
            app:layout_constraintLeft_toRightOf="@id/size_bar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>